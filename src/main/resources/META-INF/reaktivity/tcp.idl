scope tcp
{
    union TcpAddress switch (uint8)
    {
        case 1: octets[4] ipv4Address;
        case 2: octets[16] ipv6Address;
        case 3: string8 host;
    }

    scope stream
    {
        struct TcpBeginEx extends core::stream::Extension
        {
            TcpAddress localAddress;
            uint16 localPort;
            TcpAddress remoteAddress;
            uint16 remotePort;
        }
    }
}
