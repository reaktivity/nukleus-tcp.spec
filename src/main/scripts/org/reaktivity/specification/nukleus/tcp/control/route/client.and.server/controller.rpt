property nukleiRG010001CS ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlRG010001CS ${nukleiRG010001CS.control()}
property correlationIdS ${controlRG010001CS.nextCorrelationId()}
property correlationIdC ${controlRG010001CS.nextCorrelationId()}

property routeAuthorization 0x0000_000000000000L

connect "agrona://stream/bidirectional"
        option agrona:reader ${agrona:broadcastReceiver(controlRG010001CS.controller)}
        option agrona:writer ${agrona:manyToOneWriter(controlRG010001CS.nukleus)}

connected

#
# client route
#
write 0x00000001
write ${correlationIdC}
write ${core:string("tcp")}
write [0x01]
write 0L
write ${core:string("tcp#0")}
write ${core:string("localhost:8080")}
write flush

read 0x40000001
read ${correlationIdC}
read (long:newClientRouteId)

read notify ROUTED_CLIENT

#
# server route
#
write 0x00000001
write ${correlationIdS}
write ${core:string("tcp")}
write [0x00]
write ${routeAuthorization}
write ${core:string("tcp#0.0.0.0:8080")}
write ${core:string("target#0")}
write flush

read 0x40000001
read ${correlationIdS}
read (long:newServerRouteId)

read notify ROUTED_SERVER

close
closed
