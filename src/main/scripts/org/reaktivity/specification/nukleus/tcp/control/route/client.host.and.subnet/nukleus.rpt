property nukleiRG010101N ${nuklei:directory("target/nukleus-itests").controlCapacity(1024, 1024)}

property controlRG010101N ${nukleiRG010101N.controlNew()}
property sourceRef ${nuklei:newReferenceId()}

connect "agrona://stream/bidirectional"
        option agrona:reader ${agrona:manyToOneReader(controlRG010101N.nukleus)}
        option agrona:writer ${agrona:broadcastTransmitter(controlRG010101N.controller)}

connected

read 0x00000001
read (long:correlationIdRG010101N)
read ${core:string("tcp")}
read [0x01]
read [0..8] # authorization
read ${core:string("app#0")}
read ${core:string("google.com:8080")}

write 0x40000001
write ${correlationIdRG010101N}
write ${nukleus:newClientRouteId("app#0", "google.com:8080")}
write flush

read 0x00000001
read (long:correlationIdRG010101N2)
read ${core:string("tcp")}
read [0x01]
read [0..8] # authorization
read ${core:string("app#0")}
read ${core:string("127.0.0.1/24:8080")}

write 0x40000001
write ${correlationIdRG010101N2}
write ${nukleus:newClientRouteId("app#0", "127.0.0.1/24:8080")}
write flush

close
closed
